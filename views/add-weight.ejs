<script>
    function goBack() {
      window.history.back();
    }
</script>

<div id="dashboard-container" class="container">
    <div class="row align-items-start">
        <div class="row">
            <div class="card">
                <div class="card-body">
                    <%- include ('./partials/messages') %>
                    <div class="row dashboard-row">
                        <div class=col-md-auto>
                            <h5 class="card-title">Add weight</h5>
                            <p class="card-text">
                                <form action="<%= action %>" method="POST">
                                    <label for="weight">Weight:</label>
                                    <input name="weight" placeholder="in kg"/>
                                    <button type="submit" class="weight-button">Add weight</button>
                                    <a onclick="goBack()" class="weight-back-button">‚Üê Back</a>
                                </form> 
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>